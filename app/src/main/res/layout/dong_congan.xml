<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="10dp"
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"></ImageView>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:id="@+id/textviewten"
        android:text="Ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:text="Cap bac"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textviewten"
        android:id="@+id/textviewcapbac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:text="Noi cong tac"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/textviewten"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:id="@+id/textviewcongtac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:text="Quoc gia"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/textviewcongtac"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:id="@+id/textviewquocgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
</RelativeLayout>